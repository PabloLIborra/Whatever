@model IEnumerable<WhateverGenNHibernate.EN.Whatever.ComentarioEN>

@{
    ViewBag.Title = "ComentarioEvento";
}

<h2>Comentarios en Eventos</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creador)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Texto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creador)
        </td>
        <td>
            @Html.ActionLink("Borrar", "Delete", "Comentario", new { id=item.ID }, new { @class = "waves-effect waves-light white-text btn marme" }) 
            @Html.ActionLink("Volver al Evento", "Details","Evento", new { id = item.Evento.ID }, new { @class = "waves-effect waves-light white-text btn marme" })
            
        </td>
    </tr>
}

</table>
