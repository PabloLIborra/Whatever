@model MvcApplication1.Models.Comentario

@{
    ViewBag.Title = "Crear comentario en Evento";
}

<h2>Crear comentario en Evento</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Comentario</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Texto)
            @Html.ValidationMessageFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idEvento)
            @Html.ValidationMessageFor(model => model.idEvento)
        </div>

        <p>
            <input type="submit" value="Create" class="waves-effect waves-light btn" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Evento", "Details", "Evento", new { id = Model.idEvento }, new { @class = "waves-effect waves-light white-text btn marme" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
