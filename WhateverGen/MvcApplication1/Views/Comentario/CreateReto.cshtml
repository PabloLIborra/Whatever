@model MvcApplication1.Models.Comentario

@{
    ViewBag.Title = "CreateReto";
}

<h2>Comentar en Reto</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    

        <div class="editor-label">
            @Html.LabelFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Texto)
            @Html.ValidationMessageFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idReto)
            @Html.ValidationMessageFor(model => model.idReto)
        </div>

        <p>
            <input type="submit" value="Crear" class="waves-effect waves-light btn" /> 
        </p>
}

<div>
    @Html.ActionLink("Volver al Reto", "Details", "Reto", new { id = Model.idReto }, new { @class = "waves-effect waves-light white-text btn marme" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
