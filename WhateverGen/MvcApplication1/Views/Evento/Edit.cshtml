@model MvcApplication1.Models.Evento

@{
    ViewBag.Title = "Editar";
}

<h2>Editar @Html.DisplayFor(model => model.Titulo)</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Evento</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fecha)
            @Html.ValidationMessageFor(model => model.Fecha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Precio)
            @Html.ValidationMessageFor(model => model.Precio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Latitud)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Latitud)
            @Html.ValidationMessageFor(model => model.Latitud)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Longitud)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Longitud)
            @Html.ValidationMessageFor(model => model.Longitud)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Zoom)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Zoom)
            @Html.ValidationMessageFor(model => model.Zoom)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a Eventos", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
