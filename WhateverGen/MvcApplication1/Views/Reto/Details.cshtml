@model MvcApplication1.Models.Reto

@{
    ViewBag.Title = "Detalle";
}

<h2>@Html.DisplayFor(model => model.Titulo)</h2>

    <div class="display-field" style="display: inline-block; vertical-align: top; margin-right: 10px;">
        @if (Model.Imagen != "/Images/Uploads/")
        {
            <img src="@Html.DisplayFor(model => model.Imagen)" height="180" />
        }
        else
        {
            <img src="~/Images/retos.jpg" height="200" />
        }
    </div>
<div style="display: inline-block; vertical-align: top;">
    <div class="display-label">
        <b>Descripción</b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descripcion)
    </div>

    <div class="display-label">
        <b>Tipo</b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tipo)
    </div>

    <div class="display-label">
        <b>Precio</b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Precio)
    </div>


    <div class="display-label">
        <b>Creador</b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Creador)
    </div>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id=Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })  
    @Html.ActionLink("Borrar", "Delete", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })
    @Html.ActionLink("Comentar", "CreateReto", "Comentario", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })  
    @Html.ActionLink("Ver Comentarios", "ComentarioReto", "Comentario", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })  
    @Html.ActionLink("Puntuar", "CreateReto", "Puntuacion", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })  
    @Html.ActionLink("Reportar", "CreateReto", "Reporte", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" }) 
    @Html.ActionLink("Ver reportes", "IndexReto", "Reporte", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })  
    @Html.ActionLink("Volver a Retos", "List", "Reto", new { @class = "waves-effect waves-light white-text btn marme" })
</p>
