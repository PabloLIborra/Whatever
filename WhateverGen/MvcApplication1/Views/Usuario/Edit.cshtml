        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Twitter)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Twitter)
            @Html.ValidationMessageFor(model => model.Twitter)
        </div>

        <p>
            <input type="submit" value="Save" class="waves-effect waves-light btn" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Details", new { id = Model.id }, new { @class = "waves-effect waves-light white-text btn marme" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
